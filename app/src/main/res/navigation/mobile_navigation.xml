<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.list_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_listaProductos"
            app:destination="@id/listaProductos" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.list_app.fragments.ProductosFragment"
        android:label="@string/title_stock"
        tools:layout="@layout/fragment_lista_stock" >
        <argument
            android:name="categoriaProductos"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_mi_perfil"
        android:name="com.example.list_app.ui.notifications.MiPerfilFragment"
        android:label="@string/title_mi_perfil"
        tools:layout="@layout/fragment_mi_perfil" />
    <fragment
        android:id="@+id/listaProductos"
        android:name="com.example.list_app.fragments.ProductosFragment"
        android:label="Productos - Stock"
        tools:layout="@layout/fragment_lista_stock" />
</navigation>