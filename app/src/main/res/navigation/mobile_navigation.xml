<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.list_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_listaProductos"
            app:destination="@id/listaProductos" />
        <action
            android:id="@+id/action_navigation_home_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_barcodeFragment"
            app:destination="@id/barcodeFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shop_list"
        android:name="com.example.list_app.ui.shopList.ShopListFragment"
        android:label="@string/title_lista_compras"
        tools:layout="@layout/fragment_shop_list" />

    <fragment
        android:id="@+id/navigation_recetas"
        android:name="com.example.list_app.ui.recipes.RecipesFragment"
        android:label="@string/title_recetas"
        tools:layout="@layout/fragment_recipes" />
    <fragment
        android:id="@+id/listaProductos"
        android:name="com.example.list_app.fragments.ProductosFragment"
        android:label="Productos - Stock"
        tools:layout="@layout/fragment_lista_stock" />
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.list_app.fragments.RecipeDetailsFragment"
        android:label="Detalles Receta"
        tools:layout="@layout/fragment_recipe_details" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.list_app.ui.profile.ProfileFragment"
        android:label="@string/title_mi_perfil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/addProductManuallyFragment"
        android:name="com.example.list_app.fragments.AddProductManuallyFragment"
        android:label="Agregar Producto - Categorias"
        tools:layout="@layout/fragment_add_product_manually">
        <action
            android:id="@+id/action_addProductManuallyFragment_to_productsToAddListFragment"
            app:destination="@id/productsToAddListFragment" />
    </fragment>
    <fragment
        android:id="@+id/productsToAddListFragment"
        android:name="com.example.list_app.fragments.ProductsToAddListFragment"
        android:label="Agregar Producto - Items"
        tools:layout="@layout/fragment_products_to_add_list" />
    <fragment
        android:id="@+id/barcodeFragment"
        android:name="BarcodeFragment"
        android:label="BarcodeFragment" >
        <action
            android:id="@+id/action_barcodeFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>